# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_group_chat_id_here

# Если в сети перехватывают SSL (корпоративный прокси) — раскомментируйте:
# SKIP_SSL_VERIFY=1

# Корпоративная почта (IMAP)
IMAP_HOST=imap.your-company.com
IMAP_PORT=143
IMAP_USE_SSL=0
IMAP_USER=your.email@company.com
IMAP_PASSWORD=your_password_or_app_password

# Опционально: фильтр по папке (по умолчанию INBOX)
IMAP_FOLDER=INBOX
